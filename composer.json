{
  "name": "seu-usuario/coisas-inuteis",
  "description": "API PHP leve e inútil (fatos, números e conselhos absurdos) usando Slim 4",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": ">=8.2",
    "psr/http-message": "^2.0",
    "psr/http-server-middleware": "^1.0",
    "slim/slim": "^4.12",
    "slim/psr7": "^1.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "autoload": {
    "psr-4": {
      "CoisasInuteis\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CoisasInuteis\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "lint": "find app tests public -name '*.php' -type f | xargs php -l"
  }
}
